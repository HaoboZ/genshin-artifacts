{
	"name": "genshin-artifacts",
	"description": "Genshin Artifacts",
	"author": {
		"name": "Haobo Zhang",
		"email": "haobozhang9081@gmail.com"
	},
	"version": "2.0.0",
	"private": true,
	"scripts": {
		"prepare": "husky",
		"next-dev": "cd packages/next && bun run dev",
		"next-build": "cd packages/next && bun run build",
		"generate-data": "cd packages/generate-data && bun run start",
		"map-capture": "cd packages/map-capture && bun run start",
		"routes-worker": "cd packages/routes-worker && bun run deploy",
		"typecheck": "tsc -p packages/next --noEmit && bunx tsc -p packages/routes-worker --noEmit"
	},
	"workspaces": [
		"packages/*"
	],
	"dependencies": {
		"remeda": "2.33.6"
	},
	"devDependencies": {
		"@next/eslint-plugin-next": "16.1.6",
		"@types/eslint": "9.6.1",
		"@types/node": "25.3.0",
		"eslint": "10.0.2",
		"eslint-config-next": "16.1.6",
		"eslint-config-prettier": "10.1.8",
		"husky": "9.1.7",
		"lint-staged": "16.2.7",
		"prettier": "3.8.1",
		"type-fest": "5.4.4",
		"typescript": "5.9.3",
		"typescript-eslint": "8.56.0"
	}
}
