{
	"extends": "../../tsconfig",
	"compilerOptions": {
		"jsx": "react-jsx",
		"lib": ["dom", "dom.iterable", "esnext"],
		"paths": {
			"@/*": ["./*"],
			"@/api/*": ["./app/api/*"],
			"@/components/*": ["./src/components/*"]
		},
		"plugins": [
			{
				"name": "next"
			}
		]
	},
	"include": [
		"next-env.d.ts",
		".next/types/**/*.ts",
		".next/dev/types/**/*.ts",
		".next\\dev/types/**/*.ts",
		"**/*.*ts",
		"**/*.tsx",
		"**/*.*js",
		"**/*.jsx"
	]
}
